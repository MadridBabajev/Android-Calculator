<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lighter_gray</item>
        <item name="colorPrimaryVariant">@color/darker_gray</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mainButtons">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/calc_custom_buttons_portrait_main_day</item>
        <item name="android:textSize">46sp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
    </style>
    <style name="specialButtons">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/calc_custom_buttons_portrait_special_day</item>
        <item name="android:textSize">46sp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="mainButtonsLandscape">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/calc_custom_buttons_portrait_main_landscape_day</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">66dp</item>
    </style>
    <style name="specialButtonsLandscape">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/calc_custom_buttons_portrait_special_landscape_day</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">66dp</item>
    </style>

    
</resources>
